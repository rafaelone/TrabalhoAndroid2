<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imgPizza"
        tools:src="@drawable/mussarela"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescricao"
        tools:text="Descrição da pizza"
        android:layout_toRightOf="@+id/imgPizza"
        android:layout_alignTop="@+id/imgPizza"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValor"
        tools:text="Status do contato"
        android:layout_toRightOf="@+id/imgPizza"
        android:layout_alignBottom="@+id/imgPizza"
        />


</RelativeLayout>